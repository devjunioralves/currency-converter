{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@controllers/*":["./src/presentation/controllers"],
      "@middlewares/*":["./src/presentation/middlewares"],
      "@protocols/*":["./src/presentation/protocols"],
      "@routes/*":["./src/presentation/routes"],
      "@usecases/*":["./src/domain/usecases"],
      "@models/*":["./src/domain/models"],
      "@repositories/*":["./src/infra/Db/SQLite"],
      "@db/*":["./src/infra/Db"],
      "@main/*":["./src/main"],
      "@/tests/*":["../tests/*"]
    },
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true
  },
  "include": ["src"],
}
